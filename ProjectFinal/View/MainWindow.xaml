                    <DropShadowEffect BlurRadius="2" ShadowDepth="1" Color="#FFAEAEAE"/>
                </Grid.Effect>

                <StackPanel>
                    <StackPanel >
                        <Image x:Name="logo" Source="/Assets/logo1.png" Stretch="Fill" Width="60" Height="100"></Image>
                    </StackPanel>
